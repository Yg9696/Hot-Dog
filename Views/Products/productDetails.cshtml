@model ShopProject.Models.ProductsModel
<!DOCTYPE html>
<html>
<head>
    <title>Products Page</title>
    <style>
        .product-card {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 20px;
            text-align: center;
        }

        .product-image {
            max-width: 100%;
            height: auto;
        }

        .product-name {
            font-size: 1.5em;
            color: #333;
        }

        .product-price {
            color: #F00;
        }

        .product-collection {
            font-style: italic;
        }

        .product-description {
            text-align: justify;
        }

        .product-stock {
            color: green;
        }
        
    </style>
</head>
<body>

    <div class="product-card">
        <@if (@Model != null)
        {
                  <img src="path_to_image.jpg" alt="Product Name" class="product-image" />
            <h2 class="product-name">@Model.ProductName</h2>
            <p class="product-price">@Model.Price</p>
            <p class="product-collection">@Model.Collection</p>
            <p class="product-description">@Model.Description</p>
            <p class="product-stock">@Model.Stock</p>
        }
        
     
    </div>

    

</body>
</html>